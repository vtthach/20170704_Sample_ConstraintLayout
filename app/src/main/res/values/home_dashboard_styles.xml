<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomCard">
        <item name="cardBackgroundColor">@color/cbsa_color_white</item>
        <item name="cardElevation">@dimen/home_dashboard_card_elevation</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/home_dashboard_parent_item_margin_each_other</item>
    </style>

    <style name="HomeDashboard_BottomCardIcon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_dashboard_image_card_height</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="layout_constraintBottom_toBottomOf">@+id/bottomGuideline</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">@+id/topGuideline</item>
    </style>

    <style name="BottomCardText" parent="HomeDashboard_TextBoldBlack">
        <item name="layout_constraintVertical_bias">0.195</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HomeAccountTextAmount">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textAppearance">@style/CBSATextAppearance.Paragraph2</item>
        <item name="android:textColor">@color/home_dashboard_text_color_gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="HomeDashboard_TextBoldBlack">
        <item name="android:textAppearance">@style/CBSATextAppearance.Paragraph1.Bold</item>
        <item name="android:textColor">@color/cbsa_color_black</item>
    </style>
</resources>