<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="@dimen/home_dashboard_parent_item_margin"
    android:layout_marginRight="@dimen/home_dashboard_parent_item_margin"
    android:background="@drawable/home_dashboard_account_summary_background"
    android:padding="@dimen/home_dashboard_parent_item_padding"
    app:layout_constraintBottom_toBottomOf="@+id/verticalGuideline"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="@+id/horizontalGuideline"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="UnknownIdInLayout"
    tools:showIn="@layout/home_dashboard_fragment">

    <include layout="@layout/home_dashboard_acc_sum_parent_guideline" />

    <include layout="@layout/home_dashboard_acc_sum_top" />

    <include layout="@layout/home_dashboard_acc_sum_everyday_banking" />

    <include layout="@layout/home_dashboard_acc_sum_saving_goal" />

</android.support.constraint.ConstraintLayout>